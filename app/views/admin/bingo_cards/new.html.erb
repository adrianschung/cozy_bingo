<%= form_for [:admin, @bingo_card] do |f| %>
  <h2>New Bingo Card</h2>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :columns %>
    <%= f.number_field :columns %>
  </div>

  <div class="field">
    <%= f.label :rows %>
    <%= f.number_field :rows %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_field :start_date %>
  </div>
    
  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_field :end_date %>
  </div>
    
  <%=  submit_tag("Create Bingo Card") %>
<% end %>