<%= form_for @user do |f| %>
  <h2>Sign Up</h2>
  
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :ign %>
    <%= f.text_field :ign %>
  </div>
    
  <div class="field">  
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">  
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
    
  <%=  submit_tag("Create Account") %>
<% end %>